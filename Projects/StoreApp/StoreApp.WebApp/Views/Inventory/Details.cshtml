@model StoreApp.WebApp.OrderItemViewModel

@{
    ViewData["Title"] = "Details";
    int stock = (int) ViewData["Stock"];
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            <p>@stock</p>
        </dd>
    </dl>
</div>
<form asp-controller="OrderItem" asp-action="Create" asp-action="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (stock > 0) {
        <div class="form-group">
            <label asp-for="Quantity" class="control-label">Quantity</label>
            @{ var range = new SelectList(Enumerable.Range(1, stock)); }
            @Html.DropDownList("Quantity", range, new { @class = "form-control" })
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="ProductId" value=@Model.ProductId/>
            <input type="hidden" asp-for="ProductPrice" value=@Model.ProductPrice/>
            <input type="hidden" asp-for="ProductName" value=@Model.ProductName/>
                    <input type="hidden" asp-for="Product.ProductName" value=@Model.ProductName/>
            <input type="hidden" asp-for="LocationId" value=@Model.LocationId/>
            <input type="hidden" asp-for="LocationName" value=@Model.LocationName/>

            <input type="submit" value="Add to cart" class="btn btn-primary" />
        </div>
    }
</form>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderItemId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

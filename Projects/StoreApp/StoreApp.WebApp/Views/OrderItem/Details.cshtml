@using StoreApp.BusinessLogic
@model StoreApp.WebApp.OrderViewModel

@{
    ViewData["Title"] = "order details";
}

@{
}

<h4>order details</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems.First().OrderItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems.First().Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItems.First().Product.ProductPrice)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderItems) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductPrice)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="List">
        <i class="material-icons">subdirectory_arrow_left</i>
    </a>
</div>
